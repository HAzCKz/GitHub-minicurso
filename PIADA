<body>
    <h1>Olá, Papai!</h1>
    <p>Você é o melhor pai do mundo! Mas às vezes você precisa de uma piada!</p>
    <button onclick="mostrarPiada()">Clique aqui para uma piada!</button>
    <p id="piada" style="margin-top: 20px;"></p>

    <script>
        function mostrarPiada() {
            const piadas = [
                "Por que o livro de matemática se suicidou? Porque tinha muitos problemas!",
                "O que o zero disse para o oito? Que cinto legal!",
                "Por que a galinha atravessou a estrada? Para ir ao bar da esquina!",
            ];
            const piadaAleatoria = piadas[Math.floor(Math.random() * piadas.length)];
            document.getElementById('piada').innerText = piadaAleatoria;
        }
    </script>
